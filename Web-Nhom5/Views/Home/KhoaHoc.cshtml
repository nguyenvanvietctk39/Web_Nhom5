@{
    ViewBag.Title = "Khóa học";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lst = ViewData["listKhoaHoc"] as List<Web_Nhom5.Models.KhoaHoc>;
}
@*<img style="width:100%;height:200px;clear:both;" src="~/img/logo/3.jpg" alt="Alternate Text" />*@
<div id="content">
    <!--ContentLeft-->
    @RenderPage("~/Views/Shared/ContentLeft.cshtml")
    <!--End contentleft-->
    <div id="right">
        <div class="row">
            @foreach (var item in lst)
            {
                <div class="column">
                    <img class="image" src="~/img/logo/@item.Hinh" alt="Avatar" style="width:100%;height:150px;">
                    <div class="text">@item.TenKhoaHoc</div>
                    <div class="middle">
                        <div class="text"><a href="#">Chi tiết!</a></div>
                    </div>
                </div>
            }            
        </div>
    </div>
</div>

